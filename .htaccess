# ğŸ”„ Redirection de index.html vers index.php
RewriteEngine On
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /index\.html\ HTTP/
RewriteRule ^index\.html$ /index.php [R=301,L]

# ğŸš« DÃ©sactiver l'affichage de lâ€™arborescence (listing de dossier)
Options -Indexes

# ğŸ” Bloquer l'accÃ¨s aux fichiers sensibles
<FilesMatch "\.(htaccess|htpasswd|env|ini|log|sh)$">
  Order allow,deny
  Deny from all
</FilesMatch>

# âœ¨ Forcer l'encodage UTF-8
AddDefaultCharset UTF-8